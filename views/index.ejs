<center>
	<h1>Booky</h1>
</center>

<ul>
	<% for(var i = bookies.length - 1; i >= 0; i--) {%>
  	<li>
   		<a href="<%= bookies[i].href %>">
   			<%= bookies[i].title %>
   		</a>
  	 </li>
	<% } %>
</ul>

<center>
	<form class="form-inline">
	  <input type="text" id="title" class="span2" placeholder="Title…">
	  <input type="text" id="href" class="span2" placeholder="Booky…">
	  <button type="submit" class="btn btn-info">Push it!</button>
	</form>
	<p class="alert alert-error">
		Whoops, check your input bro!
	</p>
</center>

<script>
var socket = io.connect('http://localhost')

socket.on('booky', function (data) {
	$('ul').prepend('<li><a href="' + data.href +'">' + data.title + '</a></li>')
});

String.prototype.isUrl = function() {
	var regexp = /(ftp|http|https):\/\/(\w+:{0,1}\w*@)?(\S+)(:[0-9]+)?(\/|\/([\w#!:.?+=&%@!\-\/]))?/
	return regexp.test(this)
}

$(function(){
	$('form').submit(function() {
		var href = $('#href').val(),
				title = $('#title').val()

		if(href.isUrl() && title.length > 0) {
			$('p.alert').fadeOut()		
			socket.emit('booky', {href : href, title: title })
		} else {
			$('p.alert').fadeIn()
		}

		return false
	})
})
</script>